<?xml version="1.0" encoding="utf-8"?>
<extension
    type="module"
    version="2.5"
    client="site"
    method="upgrade">
    <name>BT Property Showcase</name>
    <author>BowThemes</author>
    <creationDate>Jun 2014</creationDate>
    <copyright>Copyright (C) 2014 Bowthemes. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>support@bowthems.com</authorEmail>
    <authorUrl>http://bowthemes.com</authorUrl>
    <version>1.1.2</version>
    <description>MOD_BT_PROPERTY_SHOWCASE_XML_DESCRIPTION</description>
    <files>
        <filename module="mod_bt_property_showcase">mod_bt_property_showcase.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
        <folder>language</folder>
        <folder>helper</folder>
        <folder>admin</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_bt_property_showcase.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.mod_bt_property_showcase.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset addfieldpath="/administrator/components/com_bt_property/models/fields"
                      name="basic">
                <field
					name="layout" default="default"
					type="modulelayout" class="bt_control"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
                <field name="catid" type="propertyCategory" class="inputbox"
                       default="all" label="MOD_BT_PROPERTY_SHOWCASE_CATEGORY_LABEL"
                       description="MOD_BT_PROPERTY_SHOWCASE_CATEGORY_DESC"
                       multiple="true">
                    <option value="all">MOD_BT_PROPERTY_CATEGORY_ALL</option>
                </field>
				<field name="ids" type="text" class="inputbox"
                       default="" label="MOD_BT_PROPERTY_SHOWCASE_PROPERTIES_LABEL"
                       description="MOD_BT_PROPERTY_SHOWCASE_PROPERTIES_DESC"
                       >
                  
                </field>
                
                <field name="show_limit_items" type="text" default="12"
                       label="MOD_BT_PROPERTY_SHOWCASE_SHOW_LIMIT_ITEMS_LABEL" 
                       description="MOD_BT_PROPERTY_SHOWCASE_SHOW_LIMIT_ITEMS_DESC">
                </field>
				
                <field name="show_limit_number_for" type="list"
                       label="MOD_BT_PROPERTY_SHOWCASE_SHOW_LIMIT_ITEMS_FOR_LABEL" 
                       description="MOD_BT_PROPERTY_SHOWCASE_SHOW_LIMIT_ITEMS_FOR_DESC">
                    <option value="all">MOD_BT_PROPERTY_ALL_CATEGORY</option>
                    <option value="earch">MOD_BT_PROPERTY_CATEGORY_EARCH</option>
                </field>
                
                <field name="get_sub_cat" type="radio" class="btn-group"
                       label="MOD_BT_PROPERTY_SHOWCASE_GET_SUBCAT_LABEL" 
                       description="MOD_BT_PROPERTY_SHOWCASE_GET_SUBCAT_DESC" default="0">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                
                <field name="filter_status" type="itemlist" multiple="true" itemtype="prstatus" class="btn-group"
                       label="MOD_BT_PROPERTY_SHOWCASE_FILTER_BY_STATUS_LABEL" 
                       description="MOD_BT_PROPERTY_SHOWCASE_FILTER_BY_STATUS_DESC" default="">
                       <option value="">JALL</option>
                </field>
                <field name="filter_agent" type="user"
					label="MOD_BT_PROPERTY_PROPERTY_AGENT_LABEL" description="MOD_BT_PROPERTY_PROPERTY_AGENT_DESC"
					class="inputbox" default="0" />
                <field name="show_featured_port" type="list"
                       label="MOD_BT_PROPERTY_SHOWCASE_SHOW_FEATURED_LABEL" 
                       description="MOD_BT_PROPERTY_SHOWCASE_SHOW_FEATURED_DESC" default="">
                    <option value="">JYES</option>
                    <option value="1">ONLY_SHOW_FEATURED</option>
                    <option value="0">JNO</option>
                </field>
                
                <field name="item_sort" type="list" default="ordering"
                       label="MOD_BT_PROPERTY_SHOWCASE_ITEM_SORT_LABEL" 
                       description="MOD_BT_PROPERTY_SHOWCASE_ITEM_SORT_DESC">
                    <option value="random">Random</option>
                    <option value="title">Title</option>
                    <option value="price">Price</option>
                    <option value="hits">Hits</option>
                    <option value="created">Created Date</option>
                    <option value="modified">Modified Date</option>
                    <option value="review_count">Number of review</option>
                    <option value="vote_sum/vote_count">Rating</option>
                    <option value="ordering">Ordering</option>
                </field>
                
                <field name="sort_type" type="list" default="DESC"
                       label="MOD_BT_PROPERTY_SHOWCASE_SORT_TYPE_LABEL" 
                       description="MOD_BT_PROPERTY_SHOWCASE_SORT_TYPE_DESC">
                    <option value="ASC">ASC</option>
                    <option value="DESC">DESC</option>
                </field>
				
            </fieldset>
            <fieldset name="layout_setting" label="MOD_BT_PROPERTY_SHOWCASE_LAYOUT_SETTING">
                <field name="des_limit" type="text" default="50"
                       label="MOD_BT_PROPERTY_SHOWCASE_DES_LIMIT_LABEL" 
                       description="MOD_BT_PROPERTY_SHOWCASE_DES_LIMIT_DESC">
                </field>
                <field name="des_limit_by" type="list" default="char"
                       label="MOD_BT_PROPERTY_SHOWCASE_DES_LIMIT_BY_LABEL" 
                       description="MOD_BT_PROPERTY_SHOWCASE_DES_LIMIT_BY_DESC">
                    <option value="char">Characters</option>
                    <option value="words">Words</option>
                </field>
                <field name="thumbnail_width" type="text" default="600"
                       label="MOD_BT_PROPERTY_SHOWCASE_THUMBNAIL_WIDTH_LABEL" 
                       description="MOD_BT_PROPERTY_SHOWCASE_THUMBNAIL_WIDTH_DESC">
                </field>
                <field name="thumbnail_height" type="text" default="400"
                       label="MOD_BT_PROPERTY_SHOWCASE_THUMBNAIL_HEIGHT_LABEL" 
                       description="MOD_BT_PROPERTY_SHOWCASE_THUMBNAIL_HEIGHT_DESC">
                </field>
                <field name="show_ex" type="list" default="1"
                       label="MOD_BT_PROPERTY_SHOWCASE_SHOW_EX"
                       description="MOD_BT_PROPERTY_SHOWCASE_SHOW_EX_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                    <option value="featured_only">Featured Only</option>
                </field>
				<field name="navigation" default="false" type="radio" label="NEX_BACK_BN" description="NEX_BACK_BN_DESC" class="btn-group layout_sliderhomepage layout_carouselbig layout_carousel">
					<option value="true">JYES</option>
                    <option value="false">JNO</option>	
                </field> 
				<field name="pagination" default="false" type="radio" label="SHOW_PAGINATION" description="SHOW_PAGINATION_DESC" class="btn-group layout_sliderhomepage layout_carouselbig layout_carousel">
					<option value="true">JYES</option>
                    <option value="false">JNO</option>	
                </field> 
                <field name="autoPlay" type="radio" class="btn-group layout_sliderhomepage layout_carouselbig layout_carouselsmall layout_carousel"
                       default="false" label="AUTO_START" description="AUTO_START_DESC">
					<option value="true">JYES</option>
                    <option value="false">JNO</option>	
                </field>
				<field name="autoHeight" type="radio" class="btn-group layout_sliderhomepage layout_carouselbig layout_carouselsmall layout_carousel"
                       default="true" label="AUTO_HEIGHT" description="AUTO_HEIGHT_DESC">
					<option value="true">JYES</option>
                    <option value="false">JNO</option>	
                </field>
				<field name="scrollPerPage" type="radio" default="false" label="SCROLL_PER_PAGE_LABEL" class="btn-group layout_carouselbig layout_carouselsmall layout_carousel"
                       description="SCROLL_PER_PAGE_DESC">
					<option value="true">JYES</option>
                    <option value="false">JNO</option>	 
				</field>
				<field name="stopOnHover" type="radio" class="btn-group layout_sliderhomepage layout_carouselbig layout_carouselsmall layout_carousel"
                       default="true" label="PAUSE_HOVER_LABEL" description="PAUSE_HOVER_DESC">
					<option value="true">JYES</option>
                    <option value="false">JNO</option>	
                </field>
				<!--<field name="items" type="text" default="5" label="DISPLAYED_ITEMS" class=""
                       description="DISPLAYED_ITEMS_DESC" />-->
                <field name="slideSpeed" type="text" default="200" label="SLIDESPEED" class="layout_sliderhomepage layout_carouselbig layout_carouselsmall layout_carousel"
                       description="SLIDESPEED_DESC" />
				<field name="rewindSpeed" type="text" default="1000" label="REWINDSPEED" class="layout_sliderhomepage layout_carouselbig layout_carouselsmall layout_carousel"
                       description="REWINDSPEED_DESC" />    
				<field name="transitionStyle" type="list" default="fade" class="layout_sliderhomepage"  
					label="ANIMATION_TRANSITION" description="ANIMATION_TRANSITION_DESC">
					<option value="fade">Fade</option>
					<option value="backSlide">BackSlide</option>
					<option value="goDown">GoDown</option>
					<option value="fadeUp">FadeUp</option>
		
				</field>

            </fieldset>
            <fieldset name="advanced">
                <field name="moduleclass_sfx" type="text"
                       label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

                <field name="strip_tags" type="radio" default="1" class="btn-group"
                       label="MOD_BT_PROPERTY_SHOWCASE_STRIP_TAGS_LABEL" description="MOD_BT_PROPERTY_SHOWCASE_STRIP_TAGS_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="allow_tags" type="text" default="h1, h2, h3, h4, h5, h6, br, b, em, a"
                       label="MOD_BT_PROPERTY_SHOWCASE_ALLOW_TAGS_LABEL" description="MOD_BT_PROPERTY_SHOWCASE_ALLOW_TAGS_DESC"
                       filter="string" cols="30" rows="2">
                </field>
                <field name="load_jquery" type="radio" default="0" class="btn-group"
                       label="MOD_BT_PROPERTY_SHOWCASE_LOAD_JQUERY_LABEL" description="MOD_BT_PROPERTY_SHOWCASE_LOAD_JQUERY_DESC"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="cache" type="list" default="1"
                       label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
                <field name="cache_time" type="text" default="900"
                       label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
                <field name="cachemode" type="hidden" default="static">
                    <option value="static" />
                </field>
                <field addfieldpath="/modules/mod_bt_property_showcase/admin/formfield" type="asset" name="asset" path="modules/mod_bt_property_showcase/admin/" />
            </fieldset>
        </fields>
    </config>
</extension>
